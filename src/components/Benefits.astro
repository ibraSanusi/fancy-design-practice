<style>
  li {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 500.711px;
    height: 627.383px;
    padding: 61.25px;
    border-radius: 16px;
    flex-grow: 1;
    flex-shrink: 0;

    &:nth-of-type(1) {
      background-color: var(--color-brand-block);
    }
    &:nth-of-type(2) {
      background-color: #977584;
    }
    &:nth-of-type(3) {
      background-color: #3443e0;
    }
    &:nth-of-type(4) {
      background-color: #ea87df;
    }
    &:nth-of-type(5) {
      background-color: #57416b;
    }
    &:nth-of-type(6) {
      background-color: #7221a3;
    }

    &:nth-of-type(2n + 1) {
      animation: card-to-left linear both;
      animation-timeline: view();
      animation-range: contain 0% contain 100%;
    }

    &:nth-of-type(2n + 2) {
      animation: card-to-right linear both;
      animation-timeline: view();
      animation-range: contain 0% contain 100%;
    }
  }

  ul {
    animation: show-services linear both;
    animation-timeline: view();
    animation-range: contain -10% contain 90%;
  }

  #rocket-video,
  #subscription-hero {
    animation: hide linear both;
    animation-timeline: view();
    animation-range: contain 0% contain 25%;
  }

  @keyframes show-services {
    from {
      transform: translateX(100%);
    }

    to {
      transform: translateX(-108%);
      /* left: -100%; */
    }
  }

  @keyframes hide {
    from {
      opacity: 1;
    }

    to {
      opacity: 0;
    }
  }

  @keyframes card-to-left {
    to {
      transform: rotate(-25deg);
    }
  }

  @keyframes card-to-right {
    to {
      transform: rotate(25deg);
    }
  }
</style>
